<div class="relative space-x-3 bg-secondary bg-opacity-50" id="chat-form">
    <%= form_with model: [@group, @group.chats.new], data: { controller: "form", action: "turbo:submit-end->form#reset" }) do |f| %>
    <div class="flex items-center">
        <%= f.text_field :body, class: "input input-bordered input-base-100 block w-full h-10 rounded-md ", placeholder: "ここに入力"%>
        <%= button_tag type: 'submit', class: "justify-center rounded-md border border-transparent bg-yellow-100 px-4 py-2 text-sm font-bold text-gray-600" do %>
          <i class="fa-solid fa-paper-plane fa-xl"></i>
        <% end %>
    <% end %>
    </div>
  </div>